{
    "$schema": "http://json.schemastore.org/prettierrc",
    "arrowParens": "always",
    "bracketSpacing": false,
    "insertPragma": false,
    "printWidth": 120,
    "proseWrap": "always",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "useTabs": false,
    "endOfLine": "auto",
    "overrides": [{
            "files": ["*.json", ".*.json", ".babelrc"],
            "options": {
                "parser": "json",
                "trailingComma": "es5"
            }
        },
        {
            "files": ["*.yaml", "*.yml"],
            "options": {
                "parser": "yaml",
                "tabWidth": 4,
                "quoteProps": "as-needed",
                "bracketSpacing": true,
                "printWidth": 80
            }
        },
        {
            "files": ["*.html"],
            "options": {
                "parser": "react",
                "tabWidth": 4,
                "htmlWhitespaceSensitivity": "css"
            }
        },
        {
            "files": ["*.ts"],
            "options": {
                "parser": "typescript",
                "singleQuote": true,
                "trailingComma": "all",
                "tabWidth": 4
            }
        },
        {
            "files": ["*.js", ".*.js"],
            "options": {
                "parser": "babel",
                "singleQuote": true,
                "trailingComma": "all",
                "tabWidth": 4
            }
        }
    ]
}
